{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}